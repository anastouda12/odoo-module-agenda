    <report id="event_report" model="myagenda.event.report.wizard" string="Events Report"
        report_type="qweb-pdf" name="myagenda.event_report_view"
        paperformat="paperformat_agenda_event_report" menu="False" />


    <template id="event_report_view">
        <div class="page">
            <div class="header" style="border-bottom: 2px solid black;background-color: #236ab9;color:white;">
                <h3 class="text-center" style="font-family: sans-serif;">Events Report</h3>
                <h4 class="text-center">
                    <strong>From</strong>:
                    <t t-esc="date_start" />
                    <strong>To</strong>:
                    <t t-esc="date_end" />
                </h4>
            </div>
            <div class="article">
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <th class="text-center" style="background-color: #236ab9;color: white;padding: 2px 10px;">Name
                        </th>
                        <th class="text-center" style="background-color: #236ab9;color: white;padding: 2px 10px;">Agenda
                        </th>
                        <th class="text-center" style="background-color: #236ab9;color: white;padding: 2px 10px;">Type
                        </th>
                        <th class="text-center" style="background-color: #236ab9;color: white;padding: 2px 10px;">
                            organizer</th>
                        <th class="text-center" style="background-color: #236ab9;color: white;padding: 2px 10px;">start
                            date</th>
                        <th class="text-center" style="background-color: #236ab9;color: white;padding: 2px 10px;">
                            location</th>

                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['name']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['agenda']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['type']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['organizer']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['start_date']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['location']" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer" style="background-color: #eaf2fb;">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col-xs-3 col-xs-offset-9 text-right">
                        <ul class="list-inline" style="margin-top:10px;">
                            <li>Page:</li>
                            <li>
                                <span class="page" />
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </template>

</odoo>