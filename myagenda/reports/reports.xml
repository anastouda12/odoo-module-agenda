<odoo>
    <record model="report.paperformat" id="paperformat_agenda_event_report">
        <field name="name">paperformat.agenda.event.report</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <record model="report.paperformat" id="paperformat_attendees_event_report">
        <field name="name">paperformat.attendees.event.report</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">30</field>
        <field name="margin_right">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">20</field>
        <field name="dpi">90</field>
    </record>

    <report id="event_report" model="myagenda.event.report.wizard" string="Events Report" report_type="qweb-pdf"
        name="myagenda.event_report_view" paperformat="paperformat_agenda_event_report" menu="False" />


    <report id="report_attendees" model="myagenda.event.student" string="Attendees Report"
        name="myagenda.report_attendees_view" file="myagenda.report_attendees" report_type="qweb-pdf"
        paperformat="paperformat_attendees_event_report" />


    <template id="event_report_view">
        <div class="page">
            <div class="header" style="border-bottom: 1px solid black;background-color: #14c9ba;color:white;">
                <h3 class="text-center" style="font-family: sans-serif;">Events Report</h3>
                <h4 class="text-center">
                    <strong>From</strong>:
                    <t t-esc="date_start" />
                    <strong>To</strong>:
                    <t t-esc="date_end" />
                </h4>
            </div>
            <div class="article">
                <table class="table table-condensed table-bordered" style="width: 100%">
                    <thead>
                        <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">Name
                        </th>
                        <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">Agenda
                        </th>
                        <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">Type
                        </th>
                        <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">
                            Organizer</th>
                        <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">
                            Date</th>
                        <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">
                            Location</th>

                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="doc">
                            <tr>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['name']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['agenda']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['type']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['organizer']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['start_date']" />
                                </td>
                                <td style="padding: 2px 10px;">
                                    <span t-esc="doc['location']" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <div class="row text-center" style="border-top: 1px solid black;">
                    <div class="col-xs-3 col-xs-offset-9 text-right">
                        <ul class="list-inline" style="margin-top:10px;">
                            <li>Page:</li>
                            <li>
                                <span class="page" />
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage" />
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </template>


    <template id="report_attendees_view">
        <t t-foreach="docs" t-as="doc">
            <div class="page">
                <div class="header" style="border-bottom: 1px solid black;background-color: #14c9ba;color:white;">
                    <h3 class="text-center" style="font-family: sans-serif;">Attendees Event Report</h3>
                    <h4 class="text-center">
                        <strong>
                            <p t-field="doc.name" /></strong>
                    </h4>
                </div>
                <div class="article">
                    <table class="table table-condensed table-bordered" style="width: 100%">
                        <thead>
                            <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">
                                Name
                            </th>
                            <th class="text-center" style="background-color: #258f8f;color: white;padding: 2px 10px;">
                                Role
                            </th>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.attendees_ids" t-as="attendee">
                                <tr>
                                    <td style="padding: 2px 10px;">
                                        <span t-field="attendee.name" />
                                    </td>
                                    <td style="padding: 2px 10px;">
                                        <span t-field="attendee.role" />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

</odoo>