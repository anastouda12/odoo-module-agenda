<odoo>
  <record id="group_student" model="res.groups">
    <field name="name">MyAgenda / Student</field>
  </record>

  <record id="group_teacher" model="res.groups">
    <field name="name">MyAgenda / Teacher</field>
  </record>

  <record id="group_administrative" model="res.groups">
    <field name="name">MyAgenda / Administrative</field>
  </record>

  <record id="group_administrator" model="res.groups">
    <field name="name">MyAgenda / Administrator</field>
  </record>

  <record id="only_author_can_modify_event_student" model="ir.rule">
    <field name="name">Only Author can modify unlink event student</field>
    <field name="model_id" ref="model_myagenda_event_student" />
    <field name="groups" eval="[(4, ref('myagenda.group_student'))]" />
    <field name="perm_read" eval="0" />
    <field name="perm_write" eval="1" />
    <field name="perm_create" eval="0" />
    <field name="perm_unlink" eval="1" />
    <field name="domain_force">
      [('organizer_id','=',user.partner_id.id)]
    </field>
  </record>

  <record id="only_author_can_modify_event_pedagogic" model="ir.rule">
    <field name="name">Only Author can modify unlink event pedagogic</field>
    <field name="model_id" ref="model_myagenda_event_pedagogic" />
    <field name="groups" eval="[(4, ref('myagenda.group_teacher'))]" />
    <field name="perm_read" eval="0" />
    <field name="perm_write" eval="1" />
    <field name="perm_create" eval="0" />
    <field name="perm_unlink" eval="1" />
    <field name="domain_force">
      [('organizer_id','=',user.partner_id.id)]
    </field>
  </record>

  <record id="only_author_can_modify_event_administrative" model="ir.rule">
    <field name="name">Only Author can modify unlink event administrative</field>
    <field name="model_id" ref="model_myagenda_event_administrative" />
    <field name="groups" eval="[(4, ref('myagenda.group_administrative'))]" />
    <field name="perm_read" eval="0" />
    <field name="perm_write" eval="1" />
    <field name="perm_create" eval="0" />
    <field name="perm_unlink" eval="1" />
    <field name="domain_force">
      [('organizer_id','=',user.partner_id.id)]
    </field>
  </record>
</odoo>